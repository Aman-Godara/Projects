let rec rev1 l pt  = match l with 
| ab::cd ::[] -> cd::ab::pt
|hd :: tl:: rest ->  rev1 (rest) (tl :: hd :: pt)
| nr ::[] -> nr :: pt  
|[] -> [] ;;

let rev l = rev1 l [] ;;




